@page
@model ResendEmailConfirmationModel
<!--@@{
    ViewData["Title"] = "Resend email confirmation";
}-->
<!--<h1>@@ViewData["Title"]</h1>-->

<div class="container-fluid my-5">
<div class="row justify-content-center d-flex">
        <div class="col-md-4 background-login rounded-top pb-3">
        <h2>Resend email confirmation</h2>
        <h3>Enter your email.</h3>
        <hr />
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary mt-2">Resend</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</div>