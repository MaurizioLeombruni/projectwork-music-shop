<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css">
    <title>ParaMusic Instrument Store</title>
</head>
<body>
    <!--Inizio Navbar-->
    <nav class="navbar navbar-dark bg-dark static-top">
        <div class="container-fluid">
            <!--Logo Navbar-->
            <img src="https://cdn-icons-png.flaticon.com/512/1059/1059909.png?" alt="Logo" width="5%" height="1%"
                 class="d-inline-block">
            <!--Titolo centrale-->
            <p class="navbar-brand d-flex justify-content-center ms-5 ps-5 my-0 fs-2 fw-bold">ParaMusic Instrument Store</p>
            <div class="">
                <!--Bottoni login Registrati-->
                <button type="button" class="btn btn-success">Login</button>
                <button type="button" class="btn btn-warning me-3 ms-2">Registrati</button>
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar"
                        aria-controls="offcanvasDarkNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar"
                 aria-labelledby="offcanvasDarkNavbarLabel">
                <div class="offcanvas-header">
                    <!--Sezione menu off-canvas (laterale)-->
                    <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">ParaMusic Instrument Store</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Il nostro negozio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">I nostri fornitori</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contattaci!</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary btn-danger"
                               href="@Url.Action("IndexAdm", "Administration")">
                                Amministrazione
                            </a>
                        </li>
                        <!--opzioni dropdown menu-->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Il nostro catalogo:
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" href="#">Strumenti a corda</a></li>
                                <li><a class="dropdown-item" href="#">Strumenti a percussione</a></li>
                                <li><a class="dropdown-item" href="#">Strumenti a fiato</a></li>
                                <li><a class="dropdown-item" href="#">Strumenti a tastiera</a></li>
                                <li><a class="dropdown-item" href="#">Strumenti elettronici / MIDI</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#">Catalogo completo</a></li>
                            </ul>
                        </li>
                    </ul>
                    <!--Search-bar-->
                    <form class="d-flex mt-3" role="search">
                        <input class="form-control me-2" type="search" placeholder="Cerca..." aria-label="Search">
                        <button class="btn btn-success" type="submit">Ricerca avanzata:</button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

            @RenderBody()  
            
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ShopStrumentiMusicali - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!--AXIOS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
