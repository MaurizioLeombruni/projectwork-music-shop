<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <title>ParaMusic Instrument Store</title>
</head>
<body>
    <!--Inizio layout-->
    <header class="sticky-text-color container-fluid">
        <div class="row sticky-bg-color sticky-top">
            <div class="col-sm mx-3 mt-3 mb-0">
                <img id="logo" class="logo me-3" src="https://cdn-icons-png.flaticon.com/512/1059/1059909.png?" alt="Logo">
                <p class="text-start mb-0 fs-5 fw-bolder">ParaMusic Instrument Store</p>
                <p class="text-start mt-1 fs-6">Il meglio della musica, ad un prezzo che suona bene!</p>
            </div>
            <div class="col-sm-6"></div>
            <div class="col-sm mx-3 mt-4 pt-3 me-5 mb-0">
                <div>
                    <input id="input_search" type="text" class="form-control" placeholder="Cerca un prodotto..." />
                </div>
            </div>
        </div>
    </header>
            @RenderBody()  
            
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ShopStrumentiMusicali - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
